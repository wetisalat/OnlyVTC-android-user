<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@color/white"
    card_view:cardBackgroundColor="@color/window_background"
    card_view:cardCornerRadius="@dimen/_5sdp"
    card_view:cardElevation="@dimen/_5sdp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/_14sdp">

        <TextView
            android:id="@+id/tvId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tvAmountVal"
            android:fontFamily="@font/clanpro_narrnews"
            android:text="@string/time_placeholder"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvId"
            android:gravity="center"
            android:text="@string/amount"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tvAmountVal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAmount"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_2sdp"
            android:ems="4"
            android:fontFamily="@font/clanpro_narrnews"
            android:gravity="center"
            android:text="@string/amt_placeholder"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_18" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAmountVal"
            android:gravity="start"
            android:text="@string/balance"
            android:textColor="@color/colorSecondaryText"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tvBalanceVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAmountVal"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tvBalance"
            android:gravity="start"
            android:text="@string/amount"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>